<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingHorizontal="16dp">

    <View
        android:id="@+id/dividerTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:layout_constraintBottom_toTopOf="@id/dividerBottom"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/explain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="emrullahuygn seni takip etmek istiyor."
        android:textColor="#1F1F1F"
        android:textSize="14sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintBottom_toBottomOf="@id/imgProfile"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintEnd_toStartOf="@id/endBarrier" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/endBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="actionContainer,sendMessage,rejected" />

    <LinearLayout
        android:id="@+id/actionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintBottom_toBottomOf="@id/imgProfile"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAccept"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="36dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="0dp"
            android:text="Kabul"
            android:textColor="@color/colorOnSecondary"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:visibility="visible"
            app:backgroundTint="@color/accept_blue"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toTopOf="@id/imgProfile"
            app:layout_constraintBottom_toBottomOf="@id/imgProfile"
            app:layout_constraintEnd_toStartOf="@id/btnReject" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReject"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="36dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="0dp"
            android:text="Red"
            android:textSize="13sp"
            android:textColor="@color/colorOnSecondary"
            android:textStyle="bold"
            android:visibility="visible"
            app:backgroundTint="@color/reject_gray"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toTopOf="@id/imgProfile"
            app:layout_constraintBottom_toBottomOf="@id/imgProfile"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendMessage"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="36dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="0dp"
        android:text="Mesaj GÃ¶nder"
        android:textSize="13sp"
        android:textColor="@color/colorOnSecondary"
        android:textStyle="bold"
        android:visibility="gone"
        app:backgroundTint="@color/reject_gray"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintBottom_toBottomOf="@id/imgProfile"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rejected"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="36dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="0dp"
        android:text="Reddedildi"
        android:textSize="13sp"
        android:textColor="@color/colorOnSecondary"
        android:textStyle="bold"
        android:visibility="gone"
        app:backgroundTint="@color/reject_gray"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintBottom_toBottomOf="@id/imgProfile"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/dividerBottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
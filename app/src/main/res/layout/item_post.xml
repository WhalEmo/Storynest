<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- PAYLAŞAN KULLANICI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imgUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/account_circle_24"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="kullanici_adi"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- KATEGORİ -->
        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Fantastik"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <!-- BAŞLIK -->
        <TextView
            android:id="@+id/txtPostName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="14dp"
            android:paddingTop="6dp"
            android:text="Hikâye Başlığı"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- TARİH -->
        <TextView
            android:id="@+id/txtPostDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="14dp"
            android:paddingTop="2dp"
            android:text="12 Mart 2025"
            android:textSize="11sp"/>

        <!-- KAPAK GÖRSELİ (OPSİYONEL) -->
        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <!-- HİKÂYE METNİ -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:fillViewport="true">

            <TextView
                android:id="@+id/txtContents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="16dp"
                android:text="Uzun hikâye metni buraya gelecek..."
                android:textSize="15sp"
                android:lineSpacingExtra="6dp"/>
        </ScrollView>

        <!-- ALT BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal"
            android:padding="8dp">
            <ImageView
                android:id="@+id/btnLike"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_favorite_24"/>
            <ImageView
                android:id="@+id/btnComment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/outline_comment_24"/>
        </LinearLayout> <!-- BEĞENİ SAYISI -->
        <TextView
            android:id="@+id/txtLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="120"
            android:translationY="-8dp"
            android:textStyle="bold"
            android:textSize="13sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

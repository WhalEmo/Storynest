<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/lambaSonuk"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:src="@drawable/lampoff"
        android:alpha="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"/>

    <!-- LAMBA (AÇIK) -->
    <ImageView
        android:id="@+id/lambaAcik"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:src="@drawable/lampon"
        android:alpha="0"
        android:layout_alignTop="@id/lambaSonuk"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/lightGlow"
        android:layout_width="500dp"
        android:layout_marginTop="220dp"
        android:layout_height="500dp"
        android:background="@drawable/light_full_glow"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/initialButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="24dp"
        android:layout_below="@id/lambaAcik"
        android:layout_marginTop="40dp">   <!-- İstersen biraz boşluk verilebilir -->

        <Button
            android:id="@+id/btnShowLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#F0D8C0"
            android:text="Giriş Yap"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnShowRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#F0D8C0"
            android:text="Kayıt Ol"
            android:textColor="#000000" />
    </LinearLayout>


    <!-- GİRİŞ ALANLARI (başta gizli) -->
    <LinearLayout
        android:id="@+id/loginFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lambaAcik"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/edtLoginEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />

        <EditText
            android:id="@+id/edtLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#F0D8C0"
            android:text="Giriş Yap"
            android:textColor="#000000" />

    </LinearLayout>


    <!-- KAYIT ALANLARI (başta gizli) -->
    <LinearLayout
        android:id="@+id/registerFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/lambaAcik"
        android:layout_marginTop="-55dp"
        android:padding="24dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <EditText
            android:id="@+id/edtRegName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kullanıcı Adı"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/edtRegEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginTop="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/edtRegPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:layout_marginTop="12dp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Kayıt Ol"
            android:backgroundTint="#F0D8C0"
            android:textColor="#000000"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingHorizontal="16dp"
    android:background="?attr/selectableItemBackground">

    <!-- Top Divider -->
    <View
        android:id="@+id/dividerTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Profile Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginVertical="12dp"
        android:scaleType="centerCrop"
        android:padding="1dp"
        android:src="@drawable/ic_launcher_foreground"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:layout_constraintBottom_toTopOf="@id/dividerBottom"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Username -->
    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="emrullahuygn"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#1F1F1F"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintEnd_toStartOf="@id/endBarrier"/>

    <!-- Biography -->
    <TextView
        android:id="@+id/biography"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Android Backend Developer"
        android:textSize="13sp"
        android:textColor="#757575"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintEnd_toStartOf="@id/endBarrier"/>

    <!-- Actions -->
    <LinearLayout
        android:id="@+id/actionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintBottom_toBottomOf="@id/imgProfile">

        <!-- Message Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendMessage"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Mesaj"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnSecondary"
            android:visibility="gone"
            android:paddingHorizontal="16dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/reject_gray"/>

        <!-- Unfollow Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/unFollow"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:text="Takibi BÄ±rak"
            android:textSize="13sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"
            app:cornerRadius="8dp"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/endBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="actionContainer"/>

    <!-- Bottom Divider -->
    <View
        android:id="@+id/dividerBottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
